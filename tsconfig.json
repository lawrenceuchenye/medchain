{
	"compilerOptions": {
		"paths": {
			"@/*": ["./*"]
		},
		"strict": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"env.js",
		"pages/api/routes/user.ts",
		"hardhat.config.cjs"
	],
	"exclude": ["node_modules"]
}
