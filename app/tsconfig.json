{
	"compilerOptions": {
		"paths": {
			"@/*": ["./*"]
		},
		"strict": true,
		"module": "Preserve",
		"moduleResolution": "Bundler",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"checkJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "@0no-co/graphqlsp",
				"schema": "./schema.graphql"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"env.mjs",
		"pages/api/routes/user.ts",
		"hardhat.config.cjs"
	],
	"exclude": ["node_modules"]
}
